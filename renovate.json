{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>platform-engineering-org/.github",
    "github>konflux-ci/mintmaker//config/renovate/renovate.json"
  ],
  "dependencyDashboard": true,
  "automergeType": "pr",
  "tekton": {
    "additionalBranchPrefix": "",
    "includePaths": [
      ".tekton/**"
    ],
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "baseBranchPatterns": [
    "main"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": [
        "Update 'REPOS_IMAGE' and 'BUILDER_IMAGE' in tekton files"
      ],
      "managerFilePatterns": [
        "/.tekton/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "REPOS_IMAGE=(?<depName>.*):(?<currentValue>.*)@(?<currentDigest>.*)\\n",
        "BUILDER_IMAGE=(?<depName>.*):(?<currentValue>.*)@(?<currentDigest>.*)\\n"
      ],
      "versioningTemplate": "regex:(?<compatibility>.*)-(?<patch>\\d{8})(\\.n)?\\.(?<build>\\d)",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["tekton", "custom.regex"],
      "matchPackageNames": [
        "/quay.io/bootc-devel/tekton-catalog/",
        "/quay.io/bootc-devel/fedora-bootc-43-compose/"
      ],
      "matchFileNames": [".tekton/fedora-bootc-43-*"],
      "groupName": "Fedora 43 dependencies",
      "groupSlug": "fedora-43-dependencies",
      "branchPrefix": "renovate/fedora-43/",
      "commitMessageTopic": "Fedora 43 dependencies",
      "prBodyColumns": ["Package", "Change", "Notes"],
      "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
      "schedule": ["at any time"],
      "recreateWhen": "always",
      "rebaseWhen": "never",
      "additionalBranchPrefix": ""
    },
    {
      "matchManagers": ["tekton", "custom.regex"],
      "matchPackageNames": [
        "/quay.io/bootc-devel/tekton-catalog/",
        "/quay.io/bootc-devel/fedora-bootc-rawhide-compose/"
      ],
      "matchFileNames": [".tekton/fedora-bootc-rawhide-*"],
      "groupName": "Fedora rawhide dependencies",
      "groupSlug": "fedora-rawhide-dependencies",
      "branchPrefix": "renovate/fedora-rawhide/",
      "commitMessageTopic": "Fedora rawhide dependencies",
      "prBodyColumns": ["Package", "Change", "Notes"],
      "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
      "schedule": ["at any time"],
      "recreateWhen": "always",
      "rebaseWhen": "never",
      "additionalBranchPrefix": ""
    },
    {
      "description": "Update tekton-catalog images only between 2-5 AM UTC daily",
      "matchManagers": ["tekton"],
      "matchPackageNames": ["/quay.io/bootc-devel/tekton-catalog/"],
      "schedule": ["after 2am and before 5am"],
      "timezone": "UTC"
    }
  ]
}
