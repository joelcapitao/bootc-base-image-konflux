{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>platform-engineering-org/.github",
    "github>konflux-ci/mintmaker//config/renovate/renovate.json"
  ],
  "dependencyDashboard": true,
  "automergeType": "pr",
  "tekton": {
    "additionalBranchPrefix": "",
    "includePaths": [
      ".tekton/**"
    ],
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "baseBranchPatterns": [
    "main"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "/quay.io/bootc-devel/tekton-catalog//",
        "/quay.io/bootc-devel/fedora-bootc-42-compose/"
      ],
      "matchFileNames": [".tekton/fedora-bootc-42-*"],
      "groupName": "Fedora 42 dependencies",
      "groupSlug": "fedora-42-dependencies",
      "branchPrefix": "renovate/fedora-42/",
      "commitMessageTopic": "Fedora 42 dependencies",
      "prBodyColumns": ["Package", "Change", "Notes"],
      "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
      "schedule": ["at any time"],
      "recreateWhen": "always",
      "rebaseWhen": "never"
    },
    {
      "matchPackageNames": [
        "/quay.io/bootc-devel/tekton-catalog//",
        "/quay.io/bootc-devel/fedora-bootc-43-compose/"
      ],
      "matchFileNames": [".tekton/fedora-bootc-43-*"],
      "groupName": "Fedora 43 dependencies",
      "groupSlug": "fedora-43-dependencies",
      "branchPrefix": "renovate/fedora-43/",
      "commitMessageTopic": "Fedora 43 dependencies",
      "prBodyColumns": ["Package", "Change", "Notes"],
      "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
      "schedule": ["at any time"],
      "recreateWhen": "always",
      "rebaseWhen": "never"
    },
    {
      "matchPackageNames": [
        "/quay.io/bootc-devel/tekton-catalog//",
        "/quay.io/bootc-devel/fedora-bootc-rawhide-compose//"
      ],
      "matchFileNames": [".tekton/fedora-bootc-rawhide-*"],
      "groupName": "Fedora rawhide dependencies",
      "groupSlug": "fedora-rawhide-dependencies",
      "branchPrefix": "renovate/fedora-rawhide/",
      "commitMessageTopic": "Fedora rawhide dependencies",
      "prBodyColumns": ["Package", "Change", "Notes"],
      "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
      "schedule": ["at any time"],
      "recreateWhen": "always",
      "rebaseWhen": "never"
    }
  ]
}
